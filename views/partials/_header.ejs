<header>
  <nav class="navbar navbar-expand-md navbar-dark bg-success">
    <a class="navbar-brand" href="/urls" style="font-family:'Courier New', Courier, monospace; font-size: 28px; padding-top: 0em; padding-bottom: 0em"><b>TinyApp</b></a>
    <button
      class="navbar-toggler"
      type="button"
      data-toggle="collapse"
      data-target="#navbarNavAltMarkup"
      aria-controls="navbarNavAltMarkup"
      aria-expanded="false"
      aria-label="Toggle navigation"
    >
      <span class="navbar-toggler-icon"></span>
    </button>
    <div class="collapse navbar-collapse" id="navbarNavAltMarkup">
      <div class="navbar-nav">
        <a class="nav-item nav-link" href="/urls">My URLs</a>
        <a class="nav-item nav-link" href="/urls/new">Create New URL</a>
      </div>
    </div>
    <% if (typeof user !== 'undefined' && user) { %>
      <%= user.email %>

    <form class="form-inline" action="/logout" method="POST">
    <button type="submit" style="margin-left: 10px;" class="btn btn-outline-dark" style="background-color: transparent; border: 1px solid white; color: white">Logout</button>
    </form>  

    <% } else { %>
      <form class="form-inline" action="/login" method="GET">
        <button type="submit" class="btn btn-primary" style="background-color: transparent; border: 1px solid white; color: white; margin-right: 2em"; >Login</button>
      </form>

      <form class="form-inline" action="/register" method="GET">
        <button type="submit" class="btn btn-primary" style="background-color: transparent; border: 1px solid white; color: white">Register</button>
        </form>
    <% } %>
      
  </nav>
</header>